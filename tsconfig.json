{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "jsx": "preserve",
    "lib": [
      "esnext"
    ],
    "outDir": "./dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": false,
  },
  "exclude": [
    "dist",
    "build",
    "temp",
    "node_modules"
  ],
  "include": [
    "src",
    "src/**/*",
    "app",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "scripts/**/*.ts"
  ]
}
